<!--               was: "NL\.IMRO\.[0-9]{4}\.[A-Za-z0-9]{1,18}" -->
<!--             wordt: "NL\.(IMRO|IMWE)\.[0-9]{4}\.[A-Za-z0-9]{1,18}" -->
<!--  gewijzigd: pattern PlanID -->
<!--               was: "NL\.IMRO\.[0-9]{4}\.[A-Za-z0-9]{1,18}-[A-Za-z0-9]{4}" -->
<!--             wordt: "NL\.(IMRO|IMWE)\.[0-9]{4}\.[A-Za-z0-9]{1,18}-[A-Za-z0-9]{4}" -->
